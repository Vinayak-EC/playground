<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA"
        android:orientation="horizontal"
        android:padding="25sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="20sp">


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/foegot_password"
                    android:textColor="#747474"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:text="@string/massege"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70sp"
                    android:autofillHints=""
                    android:background="@drawable/border"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/email" />

                <LinearLayout
                    android:layout_width="321dp"
                    android:layout_height="90dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="left"
                            android:layout_marginTop="10dp"
                            android:contentDescription="@string/error_3"
                            android:src="@drawable/error_icon" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="268dp"
                            android:layout_height="31dp"
                            android:layout_gravity="left"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="10sp"
                            android:background="#00B64C4C"
                            android:text="@string/error_1"
                            android:textColor="#BF574A"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="left"
                            android:layout_marginTop="10dp"
                            android:contentDescription="@string/error_3"
                            android:src="@drawable/error_icon" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="268dp"
                            android:layout_height="31dp"
                            android:layout_gravity="left"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:background="#00B64C4C"
                            android:text="@string/error_2"
                            android:textColor="#BF574A"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/button2"
                    android:layout_width="127sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50sp"
                    android:background="@drawable/log_in_botton"
                    android:text="@string/conti"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>